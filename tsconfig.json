{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "output",
    "rootDir": ".",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "declaration": true,
    "lib": [ "es6", "dom" ]
  },
  "include": [
    "source/**/*ts",
    "tests/**/*.ts",
    "scripts/**/*.ts",
    "typings/**/*.d.ts",
    "source/**/*js",
    "tests/**/*.js",
    "scripts/**/*.js"
  ]
}
